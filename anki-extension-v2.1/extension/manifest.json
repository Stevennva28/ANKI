{
  "manifest_version": 3,
  "name": "Anki Vocabulary Assistant Pro",
  "version": "2.1.0",
  "description": "Smart vocabulary capture with queue system, premium dictionaries (Oxford/Cambridge), and seamless Anki integration",
  
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "tabs",
    "notifications",
    "alarms"
  ],
  
  "host_permissions": [
    "http://localhost:8765/",
    "https://od-api.oxforddictionaries.com/*",
    "https://dictionary.cambridge.org/*",
    "https://www.merriam-webster.com/*",
    "https://api.dictionaryapi.dev/*",
    "https://apifree.forvo.com/*",
    "https://api.mymemory.translated.net/*",
    "*://*.youtube.com/*",
    "*://*/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/constants.js",
        "utils/helpers.js",
        "utils/anki-helper.js",
        "utils/storage-manager.js",
        "utils/api-manager.js",
        "content.js"
      ],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Anki Vocabulary Assistant - Click to view queue"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "commands": {
    "add-to-queue": {
      "suggested_key": {
        "default": "Alt+A",
        "mac": "Command+Shift+A"
      },
      "description": "Add selected word to queue"
    },
    "open-library": {
      "suggested_key": {
        "default": "Alt+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open vocabulary library"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "styles/*.css",
        "icons/*.png",
        "library.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "options_page": "library.html",
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
